<%= imports %>

//
//   Global App Variable
//
//////////////////////////////////////////////////////////////////////

window.APP = window.APP || {};
<%= globalAppVars %>


//
//   App Initiation
//
//////////////////////////////////////////////////////////////////////

APP.init = function() {
  <% if (oneRouter) { -%>
  // Configure Routing
  // Each route should be defined in a routename_route.js file in /scripts/modules/routes

  var routes = {
    '^/$': APP.indexRoute
  };

  APP.router = new OneRouter(routes);

  // Trigger Global Setup
  APP.globalRoute();
  <% } -%>
};


//
//   Kickoff
//
//////////////////////////////////////////////////////////////////////

APP.init();
